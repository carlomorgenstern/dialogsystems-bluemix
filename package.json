{
  "name": "dialogsystems-bluemix",
  "description": "A simple Node.js based web app which shows how a dialogsystem on bluemix could look like.",
  "version": "0.1",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "test-integration": "casperjs test ./test/integration/test.*.js",
    "test-integration-runner": "NODE_ENV=test node casper-runner.js",
    "test": "npm run lint && npm run test-unit && npm run test-integration-runner",
    "test-unit": "istanbul cover ./node_modules/mocha/bin/_mocha test/unit",
    "lint": "eslint .",
    "autofix": "eslint --fix .",
    "codecov": "npm run test && (codecov || true)"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carlomorgenstern/dialogsystems-bluemix.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "watson-developer-cloud": "^2.33.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "casperjs": "^1.1.4",
    "codecov": "^2.2.0",
    "eslint": "^4.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "phantomjs-prebuilt": "^2.1.14",
    "supertest": "^3.0.0"
  }
}
